<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/brightGreen"
        android:theme="@style/AppTheme.NoActionBar">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="공지사항 수정"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:gravity="center"/>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/back"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:text=" 제  목  :"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_gravity="center_vertical"
            android:gravity="left"/>

        <EditText
            android:id="@+id/in_update_title"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:hint="제목 입력"
            android:textSize="17dp"
            android:layout_gravity="center_vertical"
            android:background="@null"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/back"
        android:orientation="horizontal">

    <TextView
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:text=" 작성자 :"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_gravity="center_vertical"
        android:gravity="left"/>

    <TextView
        android:id="@+id/in_detail_writer"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_weight="1"
        android:textSize="17dp"
        android:layout_gravity="center_vertical"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/back"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:paddingTop="5dp"
            android:layout_gravity="start"
            android:gravity="left"
            android:text=" 내  용  :"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/in_update_content"
            android:layout_width="321dp"
            android:layout_height="150dp"
            android:paddingTop="5dp"
            android:gravity="start"
            android:layout_weight="1"
            android:hint="내용을 입력해주세요"
            android:background="@null"
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:gravity="center">

        <Button
            android:id="@+id/detailUpdate"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="수정"
            android:visibility="gone"/>

        <Button
            android:id="@+id/detailDelete"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="삭제"
            android:visibility="gone"/>

        <Button
            android:id="@+id/inUpdateSub"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="저장" />

        <Button
            android:id="@+id/inUpdateCanc"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="취소" />
    </LinearLayout>

</LinearLayout>