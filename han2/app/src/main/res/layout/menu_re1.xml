<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/brightGreen"
        android:theme="@style/AppTheme.NoActionBar">

        <ImageView
            android:id="@+id/back_go"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:src="@drawable/back_black"/>

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/recipe_kind"
            android:textSize="25sp"
            android:textColor="@color/black"/>
    </androidx.appcompat.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorSilver"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp">

    </LinearLayout>

    <!--카테고리 이미지-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/category_img1"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/category1"
            android:padding="4dp"/>

        <ImageView
            android:id="@+id/category_img2"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/category2"
            android:padding="4dp"/>

        <ImageView
            android:id="@+id/category_img3"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/category3"
            android:padding="4dp"/>

        <ImageView
            android:id="@+id/category_img4"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/category4"
            android:padding="4dp"/>


    </LinearLayout>

    <!--카테고리 텍스트뷰-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/category_tv1"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:text="종류별"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"/>

        <TextView
            android:id="@+id/category_tv2"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:text="상황별"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"/>

        <TextView
            android:id="@+id/category_tv3"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:text="재료별"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"/>

        <TextView
            android:id="@+id/category_tv4"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:text="제철요리"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp">

    </LinearLayout>

    <!--줄 긋기-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="@color/gray" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp">

    </LinearLayout>

    <!--아이콘 2-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/all_img"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/all"
            android:padding="4dp"/>

        <ImageView
            android:id="@+id/side_img"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/side"
            android:padding="4dp"/>

        <ImageView
            android:id="@+id/soup_img"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/soup"
            android:padding="4dp"/>

        <ImageView
            android:id="@+id/dessert_img"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/dessert"
            android:padding="4dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/all"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:text="전체"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"/>

        <TextView
            android:id="@+id/side"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:text="반찬"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"/>

        <TextView
            android:id="@+id/soup"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:text="국류"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"/>

        <TextView
            android:id="@+id/dessert"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:text="디저트"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/noodle_img"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/noodle"
            android:padding="4dp"/>

        <ImageView
            android:id="@+id/source_img"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/source"
            android:padding="4dp"/>

        <ImageView
            android:id="@+id/bob_img"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/bob"
            android:padding="4dp"/>

        <ImageView
            android:id="@+id/salad_img"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/salad"
            android:padding="4dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/noodle"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:text="면"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"/>

        <TextView
            android:id="@+id/source"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:text="양념/소스"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"/>

        <TextView
            android:id="@+id/bob"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:text="밥/죽/떡"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"/>

        <TextView
            android:id="@+id/salad"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:text="샐러드"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/bbang_img"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/bread"
            android:padding="4dp"/>

        <ImageView
            android:id="@+id/gita_img"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/etc"
            android:padding="4dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/bbang"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:text="빵"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"/>

        <TextView
            android:id="@+id/gita"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:text="기타"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"/>

    </LinearLayout>



</LinearLayout>