<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/brightGreen"
        android:theme="@style/AppTheme.NoActionBar">
        <ImageView
            android:id="@+id/back_go"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:src="@drawable/back_black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="해산물"
            android:textColor="@color/black"
            android:textSize="25sp" />
    </androidx.appcompat.widget.Toolbar>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <ImageView
            android:id="@+id/category_img1"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/category1"
            android:padding="4dp"/>

        <ImageView
            android:id="@+id/category_img2"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/category2"
            android:padding="4dp"/>

        <ImageView
            android:id="@+id/category_img3"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/category3"
            android:padding="4dp"/>

        <ImageView
            android:id="@+id/category_img4"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/category4"
            android:padding="4dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <TextView
            android:id="@+id/category_tv1"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:text="종류별"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"/>

        <TextView
            android:id="@+id/category_tv2"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:text="상황별"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"/>

        <TextView
            android:id="@+id/category_tv3"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:text="재료별"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"/>

        <TextView
            android:id="@+id/category_tv4"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:text="제철요리"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorSilver"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="56dp"
        android:foregroundGravity="top">

    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>